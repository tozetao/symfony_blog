{% extends 'base.html.twig' %}

{% block title %}Post index{% endblock %}

{% block content %}
    <h1 class="my-4">Page Heading
        <small>Secondary Text</small>
    </h1>

    {% for post in posts %}
    <!-- Blog Post -->
    <div class="card mb-4">
{#        <img class="card-img-top" src="http://placehold.it/750x300" alt="Card image cap">#}
        <img class="card-img-top" src="{{ asset(post.postImage, 'file_upload') }}" alt="{{ post.title }}">
        <div class="card-body">
            <h2 class="card-title">{{ post.title }}</h2>
            <p class="card-text">
                {{ post.summary }}
            </p>
            <a href="{{ path('app_post_show', {'identify': post.id}) }}" class="btn btn-primary">Read More &rarr;</a>
{#
    assert(v1, v2)
    第二个参数可以配置资源包的basePath，即包前缀。
    console config:dump framework assets
#}
        </div>
        <div class="card-footer text-muted">
            {{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}
            <a href="#">Start Bootstrap</a>
        </div>
    </div>
    {% else%}
        <h1>暂时没有数据</h1>
    {% endfor %}

    <!-- Pagination -->
    <ul class="pagination justify-content-center mb-4">
        <li class="page-item">
            <a class="page-link" href="#">&larr; Older</a>
        </li>
        <li class="page-item disabled">
            <a class="page-link" href="#">Newer &rarr;</a>
        </li>
    </ul>
{% endblock %}
